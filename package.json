{
  "name": "@reaviz/react-use-fuzzy",
  "version": "1.0.1",
  "description": "React hook for client side fuzzy search using Fuse.js",
  "homepage": "https://github.com/reaviz/react-use-fuzzy#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "concurrently --handle-input \"wait-on lib/index.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "keywords": [
    "react",
    "hooks",
    "fuzzy",
    "fuzzy-search",
    "fuse.js",
    "client-search"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">= 16",
    "fuse.js": "^6.6.2"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/react": "^16.9.15",
    "concurrently": "^7.2.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "tslint": "^5.20.1",
    "typescript": "^4.7.2",
    "wait-on": "^6.0.1",
    "fuse.js": "^6.6.2",
    "react": "^16.12.0"
  }
}
